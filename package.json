{
  "name": "bard",
  "version": "1.0.1",
  "main": "src/server.js",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/logging": "^10.0.4",
    "@google-cloud/secret-manager": "^4.0.0",
    "body-parser": "^1.20.0",
    "btoa-lite": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.7",
    "swagger-ui-express": "^5.0.0"
  },
  "resolutions": {
    "glob": "^9.0.0",
    "optionator": "^0.9.3",
    "semver": "^7.5.2"
  },
  "scripts": {
    "generate-docs": "apidoc -i src -o docs && yarn generate-swagger",
    "generate-swagger": "apidoc-openapi -p ./swagger-config/apidoc-for-swagger.json  -s ./src/ -o ./docs/swagger.json && yarn finalize-swagger",
    "finalize-swagger": "json-merger -o ./docs/swagger.json -p ./docs/swagger.json ./swagger-config/swagger-overlay.json",
    "generate-client": "yarn generate-docs && openapi-generator-cli generate --skip-validate-spec -i ./docs/swagger.json -g java --library resttemplate --artifact-id bard-client-resttemplate --model-package bio.terra.bard.model --api-package bio.terra.bard.api --invoker-package bio.terra.bard.client --additional-properties=useSpringBoot3=true --additional-properties=useJakartaEe=true --template-dir client-resttemplate/templates --group-id bio.terra --artifact-id bard --artifact-version $(yarn version --non-interactive | grep 'Current version:' | awk '{ print $4 }') -o ./client-resttemplate && chmod +x client-resttemplate/gradlew",
    "publish-client": "yarn generate-client && cd client-resttemplate && ./publish.sh",
    "lint": "eslint \"src/**/*.js\"",
    "test": "jest --detectOpenHandles --forceExit",
    "test-interactive": "jest --watchAll",
    "debug": "node --debug-brk --inspect ./node_modules/.bin/jest -i",
    "start": "node src/server.js",
    "start-dev": "nodemon"
  },
  "devDependencies": {
    "@forfuture/apidoc-openapi": "^0.0.1",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "apidoc": "^1.2.0",
    "eslint": "^8.48.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.4",
    "jest-when": "^3.6.0",
    "json-merger": "^1.1.10",
    "nodemon": "^2.0.19",
    "superagent": "^8.1.2",
    "supertest": "^6.3.3"
  }
}
